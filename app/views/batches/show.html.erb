<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading"><h4><%= @batch.name %></h4></div>
		<div class="panel-body">
			<div class="row margin-top-row-20">
			<div class="col-xs-3 ">
				<strong>Type : </strong><%=@batch.batch_type.nil? ? "Unknown" : @batch.batch_type.name%>
			</div>
			<div class="col-xs-3">
				<strong>Patient : </strong><%=@batch.patient_nb.nil? ? "-" : @batch.patient_nb%>
			</div>
			<div class="col-xs-3">
				<strong>Number of vials : </strong><%=@batch.vials.nil? ? "-" : @batch.vials.count%>
			</div>
		</div>
		<div class="row margin-top-row-20">
			<div class="col-xs-3">
				<strong>Clone : </strong><%=@batch.clone_nb.nil? ? "-" : @batch.clone_nb%>
			</div>
			<div class="col-xs-3">
				<strong>Passage : </strong><%=@batch.passage_nb.nil? ? "-" : @batch.passage_nb%>
			</div>
	</div>
	<div class="row margin-top-row-20">
		<div class="col-xs-6">
			<strong>User : </strong><%=@batch.user.nil? ? "Unknown" : @batch.user.full_name %>
		</div>
	</div>
	<div class="row margin-top-row-20">
		<div class="col-xs-12">
			<strong>Description : </strong><%= @batch.description.blank? ? "-" : @batch.description %>
		</div>
	</div>
	<div class="row margin-top-row-20">
	<div class="col-xs-12 text-center" style="overflow: auto;">
			<div class="panel panel-default">
				<div class="panel-heading">Vials</div>
					<div class="panel-body">
						<%= render partial: 'batches/components/list' %>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div class="panel-footer">
	    		<% if can? :manage, Batch %>
	    			 <div class="btn-group" role="group" aria-label="...">
		    			<%= link_to 'Edit', edit_batch_path(@batch), :class => "btn btn-default" %>
		    		</div>
		    	<%end%>
	 </div>

</div><!--End or panel-->
</div>