<header>
	 <nav class="navbar navbar-default navbar-fixed-top navbar">
	  <div class="container-fluid">
	    <div class="navbar-header">
	    		<%=link_to(image_tag("/images/Logo-A.png", size: "80x30", alt: "SYS"), root_path, class: "navbar-brand")%>
	    	</div>
	    <% if current_user%>
	     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li class="dropdown">
	        		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=t('menu.utilities')%><span class="caret"></span></a>
	          <ul class="dropdown-menu">
	          	<%= content_tag(:li, link_to( "Boxes", boxes_path, class: "nav-link"), remote: true)%>
	          	<%= content_tag(:li, link_to( "Vials", sorter_vials_path, class: "nav-link"), remote: true)%>
	          	<%= content_tag(:li, link_to( "Containers", containers_path, class: "nav-link"), remote: true)%>
	            <li role="separator" class="divider"></li>
	            <%= content_tag(:li, link_to( "Users", "#", class: "nav-link"), remote: true)%>
	          </ul>
	         </li>
			</ul>
		      <ul class="nav navbar-nav navbar-right">
		      	<li>
		     		<span class="navbar-text">
		     		<small>
					<% if signed_in? %>
		    				<small><%=t('menu.sign_in_as')%> : <strong><%= current_user.full_name %></strong> - <%=role_set(current_user.role)%></small>
			    			<%= link_to user_path(current_user.id), method: :get do %>
						 		<i class="fa fa-user"></i>
						<%end%>
			    			<%= link_to destroy_user_session_path, method: :get do %>
						 		<i class="fa fa-sign-out-alt"></i>
						<%end%>
					<% unless can? :manage, User%>
		    				<br /><strong><%=current_user.teams.pluck(:name).to_sentence%> </strong>
		    			<%end%>
		    			<%end%>
		    			</small>
		     		</span>
		     	</li>
		     	<li>
	         	<%if I18n.locale == :fr%>
					<%= link_to  root_path(locale: :en) do %>
						<span class="flag-icon flag-icon-gb"></span>
					<%end%>
				<%else%>
					<%= link_to root_path(locale: :fr) do %>
						<span class="flag-icon flag-icon-fr"></span>
					<%end%>
				<%end%>
			</li>
		      </ul>
		      <%end%>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
