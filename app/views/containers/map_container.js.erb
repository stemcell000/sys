$(".rack").on("click", function() {
    //Changement de couleur du fond du rack cliqu√©
    $(this).css('backgroundColor', "#5bc0de");
    $('.rack').not(this).each(function(){
                $(this).css('backgroundColor', "#337ab7");
             });
    //
    getShelfRackMap($(this).data("id"), '#map-shelf-rack');
    $('#map-shelf-rack').attr({'data-id': $(this).data("id")});
})

function btnColor(myclass, color) {
var property = $(myclass);
    if (property.className !== 'toggled') {
        property.css('backgroundColor', color);
        property.className = 'toggled'
    }
    else {
        property.css('backgroundColor', '');
        property.className = '';
    }
}