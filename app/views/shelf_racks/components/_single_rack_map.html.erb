<div style=" display: block; overflow: auto; min-height: 450px; text-align: center; border: 1px solid black; border-radius: 2px; float: none; padding: 0 0 5% 5%;">
    <div class="text-left container_rack_label">
      rack#<%=shelf_rack.name%>
    </div>

        <%shelf_rack.rack_positions.each do |position|%>
            <div class = "bg-default container_rack_position draggableContainer slot outer-div" data-id=<%=position.id%> data-name=<%=position.name%>>
            	<%unless position.box.nil? %>
	            	<div class="box-location draggable  inner-div">
						<div class="box" style="background-color: <%=position.box.color.code%>;"></div>
					</div>
            	<%end%>
            </div>
            <div class="col-xs-1" style="font-size: 75%; padding: 0 0 0 0;"><%=position.name%>
            </div>
        <%end%>
</div>
