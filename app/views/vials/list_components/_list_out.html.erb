<%if @vials.empty? %>
<span>No vial</span>
<%else%>

	  <table class="table table-striped">
	    <thead>
	    <th class="col-xs-6">Name</th>

	   <%if controller_name == 'vials' && action_name == 'out_vials'%>
		    <th class="col-xs-2">Exit date</th>
		    <th class="col-xs-3">Client</th>
	    <%end%>
	   
	    <th class="col-xs-1"></th>

	    </thead>
	    <tbody>
		  	<% @vials.each do |s| %>
	      		<tr class="editable" data-id = "<%= s.id %>">
	          		<%= render  partial: "vials/list_components/vial_out", locals: {object: s} %>
	        		</tr>
	      	<% end %>
	    </tbody>
	  </table>
<div class="row">
  <div class="col-lg-12 text-center">
    <%== pagy_bootstrap_nav(@pagy) %>
    <%== pagy_bootstrap_nav_js(@pagy) %>
  </div>
</div>

<%end%>