 <%= search_form_for @q, :url => vials_path, :class => "form-inline" ,:remote => true do |f| %>
<small>

 <div class="row">
			<div class="col-xs-12 margin-top-row-20 ">
				<h3><i class="fa_icon fa fa-search"></i> Vials</h3>
			</div>
</div>
		
<div class="row">
		<div class="col-xs-12 margin-top-row-20 ">
				<%= f.search_field :name_cont, class: "col-lg-12 col-md-12 col-sm-12", placeholder: "Search any terms."%>
		</div>
		<div id = "hidden-data"></div>
</div>

<div class="row margin-top-row-20">
	<div class="form-group pull-right">
  			<%= f.submit class:"btn btn-default" %>
  			<%= link_to "Clear Search", request.path, class:"btn btn-default" %>
  </div>
</div>

</small>
<% end %>
