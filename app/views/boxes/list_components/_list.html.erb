  <div class="container-fluid">
	  <table class="table table-striped">
	    <thead>
	   	<th class="col-xs-1">
	        Color
	    </th>
	    <th class="col-xs-5">
	        Name
	    </th>
	    	 <th class="col-xs-2">
	        Barcode
	    </th>
	   	</th>
	    <th class="col-xs-2">
	        Status
	    </th>
	    <th class="col-xs-2"></th>
	    
	    </thead>
	    <tbody>
	    	 <% unless @boxes.empty? %>
		  	<% @boxes.each do |s| %>
	      		<tr class="editable" data-id = "<%= s.id %>">
	      			<% str = s.rack_position.nil? ? "Not in container" : "in "+s.rack_position.shelf_rack.shelf.container.name %>
	          		<%= render partial: "boxes/list_components/box", locals: {box: s, str: str} %>
	        		</tr>
	      	<% end %>
	      <%else%>
	      	No box.
	     <%end%>
	    </tbody>
	  </table>
	<div class="row">
  <div class="col-lg-12 text-center">
    <%== pagy_bootstrap_nav(@pagy) %>
    <%== pagy_bootstrap_nav_js(@pagy) %>
  </div>
</div>
