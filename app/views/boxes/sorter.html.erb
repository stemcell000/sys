<% provide(:title, "Box sorter") %>
 <div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<h3>Box sorter</h3>
	</div>
</div>
		<div id="info-container">
					<div class="row">
						<div id="box-container" class="col-xs-3">
							<%= render :partial => "boxes/components/content_inventory", :locals => {:boxes => @boxes} %>
						</div>
						<div class="col-xs-2">
							<div class="panel panel-default">
								<div class="panel-heading">Rack</div>
								<div class="panel-body" style="height: 500px;overflow: auto;">
									<div id="map-shelf-rack" class="col-xs-12 hcenter" style="padding: 0 0 0 0; margin: 0 0 0 0;" ></div>
								</div><!--End of panel-body-->
							</div><!--End of panel-default"-->
						</div><!--End of col-xs-2-->
						<div class="col-xs-7">
							<div class="panel panel-default">
								<div class="panel-heading">Container</div>
								<div class="panel-body " style="height: 500px;overflow: auto;">
									<%=select_tag "container_select", options_from_collection_for_select(Container.all.order(name: :desc), "id", "name"), :class => 'select2-select col-xs-12', include_blank: true, onchange: "getContainerMap(this.value, '#map-container')"%>
									<span><em><small><div id="help-message">Please, select a container.</div></small></em></span>
									<div id="map-container" class="col-xs-12"></div>
								</div><!--End of panel-body-->
							</div><!--End of panel default-->
						</div><!--End of col-xs-6-->
				</div><!--End of row-->
			</div><!-- End of info-container-->
