 <%= search_form_for @q, remote: false do |f| %>
<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
				<%= f.search_field :name_or_barcode_or_positions_vial_name_cont, class: "col-lg-12 col-md-12 col-sm-12", placeholder: "Search any terms."%>
		</div>
</div>
<div class="row">
			<div class="col-lg-4">
				<%= f.label "Container"%>
				<%= f.select(:shelf_container_id_in, Container.all.map{|c| c.name}, {:include_blank=> " "}, {:class => "select2-select col-lg-12", :multiple => true}) %>
			</div>
			<div class="col-lg-4">
				<%= f.label "Shelf"%>
				<%= f.select(:shelf_id_in, Shelf.all.map{|s| s.name}, {:include_blank=> " "}, {:class => "select2-select col-lg-12", :multiple => true}) %>
			</div>
		</div>
<div class="row">
	<div class="form-group pull-right">
  			<%= f.submit class:"btn btn-default" %>
  			<%= link_to "Clear Search", request.path, class:"btn btn-default" %>
			<%= link_to "Sorter", sorter_vials_path, class: "btn btn-default" %>
  	</div>
</div>
<% end %>
