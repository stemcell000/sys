<h3><i class="fa_icon fa fa-search"></i> Boxes/vials</h3>
<div class="row">
	<div class="col-xs-12">
		<%=render 'boxes/components/search'%>
	</div>
</div>
<% unless @boxes.empty? %>
<div class="row" style="height: 300px;overflow: auto;">
	<div class="col-xs-12 text-center">
		<div class="panel panel-defauly">
			<div class="panel-heading">Boxes</div>
			<div class="panel-body">
				<%= smart_listing_render :boxes %>
			</div>
		</div>
		</div>
	</div>
	<div class="row">
	<div class="col-xs-3 text-center">
		<div class="panel panel-default">
			<div class="panel-heading">Vials</div>
			<div class="panel-body">
				<%= smart_listing_render :vials %></div>
		</div>
	</div>
	<div class="col-xs-9 text-center">
		<div class="panel panel-defauly">
			<div class="panel-heading">Selected box</div>
			<div class="panel-body">
				<div id="map-container" class="col-xs-6 text-center"></div>
			</div>
		</div>
	</div>
</div>
<%else%>
<p><em>No results</em></p>
<%end%>
	